{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src",
    "style"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
